<% layout("/layouts/boilerplate") %>

  <body>
    <div class="main-div offset-3 ">
      <p class="profile text-color"><i class="fa-solid fa-circle-user">  <%= listing.Owner.username %></i></p> 

      <div class="card main-card" style="width: 18rem;">
        <img src="<%= listing.image.url %>" class="show-image card-img-top show-img" alt="listing image">
        <div class="card-body card-sec-body">
          
          <b>
            <p class="card-text">
              <%= listing.title %>
            </p>
          </b>

          <%= listing.description %>
            <br>
            <b>Price : &#8377;<%= listing.price.toLocaleString("en-IN") %>/ Night</b>
            <b>Location : <%= listing.location %>,<%= listing.country %></b>
        </div>
      </div>


      <% if(currUser && currUser._id.equals(listing.Owner._id)){ %>
        <div class="show-btn">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">Edit</a>
          <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-dark">Delete LIst</button>
          </form>
        </div>
        <% } %>

    </div>

    <!-- review section -->
    <% if(currUser){ %>
      <hr>

      <div class="mb-3 mt-3 main-review offset-3">
        <h4 class="text-color">Leave a review</h4>
        <form method="POST" action="/listings/<%= listing.id %>/review" novalidate class="needs-validation">
          <label for="rating" class="inline-block">Rating</label>
          <fieldset class="starability-slot">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
              aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
          <div>
            <label for="comment" id="comment" class="form-label mb-3 inline">Comment</label>
            <textarea type="text" name="review[comment]" rows="5" cols="15" class="form-control text-design w-75"
              required></textarea>
            <div class="invalidate-feedback">Please fill in the blank</div>
          </div>
          <button class="btn btn-dark mb-3 mt-3">Submit</button>
        </form>
      </div>
      <% } %>
        <!-- review view section -->
        <% if(listing.review.length> 0){ %>
          <hr class="w-100">
          <h4 class="text-color">All Review</h4>
          <div class="row">
            <% for(review of listing.review){ %>
              <div class="card col-6 mb-3">
                <div class="card-body card-body-review">
                  <h5 class="card-title">
                    <%= review.author.username %>
                  </h5>
                  <p class="card-text starability-result" data-rating="<%=review.rating %>">
                    Rated: 3 stars
                  </p>
                  <p class="card-text">
                    <%= review.comment %>
                  </p>
                  <% if(currUser){ %>
                    <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                      <button class="btn btn-dark btn-sm">Delete</button>
                    </form>
                    <% } %>
                </div>
              </div>
              <% } %>
          </div>
          <% } %>

 

  </body>