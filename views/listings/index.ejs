<% layout("/layouts/boilerplate") %>

  <body>
    <!-- <h3 class="text-color mb-4 mt-6">All Listings</h3> -->

    <div class="main-color container parent-icon mb-2">
      <div class="child-icon">
        <div><i class="fa-solid fa-fire-flame-curved"></i></div>
        <p>Trending</p>
      </div>
      <div class="child-icon">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
      <div class="child-icon">
        <div><i class="fa-solid fa-city"></i></div>
        <p>Iconic Cities</p>
      </div>
      <div class="child-icon">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Mountain Cities</p>
      </div>
      <div class="child-icon">
        <div><i class="fa-solid fa-chess"></i></div>
        <p>Castles</p>
      </div>
      <div class="child-icon">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Pools</p>
      </div>
      <div class="child-icon">
        <div><i class="fa-solid fa-tents"></i></div>
        <p>Camping</p>
      </div>
      <div class="child-icon">
        <div><i class="fa-solid fa-tractor"></i></div>
        <p>Farms</p>
      </div>
      <div class="child-icon">
        <div><i class="fa-solid fa-snowman"></i></div>
        <p>Aictic</p>
      </div>
      <div class="child-icon">
        <div><i class="fa-solid fa-umbrella-beach"></i></div>
        <p>Beach</p>
      </div>

      <div class="tax-toggle">
        <div class="form-check form-switch form-check-reverse">
          <input class="form-check-input" type="checkbox" id="switchCheckReverse" class="tax-button">
          <label class="form-check-label" for="switchCheckReverse">Display Total After Taxes</label>
        </div>
      </div>
    </div>
    <!-- <form method="GET" action="/listings/new">
        <button>Create New List</button>
    </form> -->

    <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1">
      <% for (let listings of allListing){ %>
        <a href="/listings/<%= listings._id %>" class="listing-show">
          <div class="card col" style="width: 20rem;">
            <img src="<%= listings.image.url %>" class="card-img-top" alt="Home image">
            <div class="card-body">
              <b>
                <p class="card-text">
                  <%= listings.description %>
                </p>
              </b>
              <p class="card-text card-text-lp">
                <%= listings.price.toLocaleString("en-IN") %> / Night
                <i class="tax-info"> +18% GST</i>
              </p>
            </div>
          </div>
        </a>
        <% } %>
    </div>
  </body>